SELECT

-- PersonId to match with all View's // TblPerson
    tP.Id AS TblPerson_Id,
    tP.Title AS TblPerson_Title,
    tP.FirstName AS TblPerson_FirstName,
    tP.LastName AS TblPerson_LastName,
    tP.SecondName AS TblPerson_SecondName,
    tP.CallName AS TblPerson_CallName,
    tP.BirthName AS TblPerson_BirthName,
    concat(
        tP.FirstName, ' ',
        tP.SecondName,
        IF(tP.SecondName = '', '', ' '),
        tP.LastName
    ) as TblPerson_FirstLastName,
    concat(
        tP.LastName, ' ',
        tP.FirstName,
        IF(tP.SecondName = '', '', ' '),
        tP.SecondName
    ) as TblPerson_LastFirstName,
    tP.EntityRemove AS TblPerson_EntityRemove,
-- tblType
    tS.Salutation AS TblSalutation_Salutation,
-- tblCommon
    tC.Remark AS TblCommon_Remark,
-- tblCommonBirthDates
    DATE_FORMAT( tCBD.Birthday, '%d.%m.%Y' ) AS TblCommonBirthDates_Birthday,
    tCBD.Birthplace AS TblCommonBirthDates_Birthplace,
-- tblCommonGender
    tCG.Name AS TblCommonGender_Name,
-- tblCommonInformation
    tCI.Nationality AS TblCommonInformation_Nationality,
    tCI.Denomination AS TblCommonInformation_Denomination,
    tCI.AssistanceActivity AS TblCommonInformation_AssistanceActivity,
    IF (tCI.IsAssistance, 'Ja', 'Nein') AS TblCommonInformation_IsAssistance,
-- tblGroup
    (select
        group_concat(
            concat(tG.Name)
            separator ', '
        )
    from PeopleGroup_{{ ConsumerAcronym }}.tblMember tM
        LEFT JOIN PeopleGroup_{{ ConsumerAcronym }}.tblGroup tG ON tG.Id = tM.tblGroup
	where tM.serviceTblPerson = tP.Id
        and tG.Name != 'Alle'
    ) TblGroup_GroupList

FROM PeoplePerson_{{ ConsumerAcronym }}.tblPerson tP
    LEFT JOIN PeoplePerson_{{ ConsumerAcronym }}.tblSalutation tS ON tS.Id = tP.tblSalutation
    LEFT JOIN PeopleMeta_{{ ConsumerAcronym }}.tblCommon tC ON tC.serviceTblPerson = tP.Id
    LEFT JOIN PeopleMeta_{{ ConsumerAcronym }}.tblCommonBirthDates tCBD ON tCBD.Id = tC.tblCommonBirthDates
    LEFT JOIN PeopleMeta_{{ ConsumerAcronym }}.tblCommonGender tCG ON tCG.Id = tCBD.tblCommonGender
    LEFT JOIN PeopleMeta_{{ ConsumerAcronym }}.tblCommonInformation tCI ON tCI.Id = tC.tblCommonInformation

WHERE tP.EntityRemove IS NULL